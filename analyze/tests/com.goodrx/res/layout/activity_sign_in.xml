<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:custom="http://schemas.android.com/apk/res-auto">
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <TextView android:textColor="@color/gray_text_subtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/list_item_horizental_padding" android:layout_marginTop="@dimen/list_item_vertical_padding_1_5x" android:layout_marginRight="@dimen/list_item_horizental_padding" android:layout_marginBottom="@dimen/list_item_vertical_padding_1_5x" android:text="@string/signin_description" />
            <include layout="@layout/divider" />
            <LinearLayout android:orientation="horizontal" android:background="@android:color/white" android:paddingTop="@dimen/list_item_vertical_padding" android:paddingBottom="@dimen/list_item_vertical_padding" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/list_item_horizental_padding" android:src="@drawable/ic_email" android:tint="@color/gray_text_subtitle" />
                <org.droidparts.widget.ClearableEditText android:id="@id/edittext_signin_email" android:background="#00000000" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/list_item_horizental_padding" android:layout_marginRight="@dimen/list_item_horizental_padding" android:hint="@string/enter_email_address" android:singleLine="true" android:inputType="textWebEmailAddress" />
            </LinearLayout>
            <include layout="@layout/divider" />
            <LinearLayout android:orientation="horizontal" android:background="@android:color/white" android:paddingTop="@dimen/list_item_vertical_padding" android:paddingBottom="@dimen/list_item_vertical_padding" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/list_item_horizental_padding" android:src="@drawable/ic_lock" android:tint="@color/gray_text_subtitle" />
                <org.droidparts.widget.ClearableEditText android:id="@id/edittext_signin_password" android:background="#00000000" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/list_item_horizental_padding" android:layout_marginRight="@dimen/list_item_horizental_padding" android:hint="@string/password" android:singleLine="true" android:inputType="textPassword" />
            </LinearLayout>
            <include layout="@layout/divider" />
            <com.goodrx.widget.ClickableTextView android:textSize="@dimen/text_size_large" android:textColor="@color/blue_button" android:gravity="center" android:id="@id/textview_signin_forgetpassword" android:paddingTop="@dimen/list_item_vertical_padding" android:paddingBottom="@dimen/list_item_vertical_padding_2x" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/forgot_your_password" custom:pressedTextColor="@color/gray_text_subtitle" />
            <Button android:textColor="@android:color/white" android:id="@id/button_signin" android:background="@drawable/clickable_background_blue" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/list_item_horizental_padding" android:layout_marginRight="@dimen/list_item_horizental_padding" android:text="@string/log_in" android:onClick="signInClicked" />
        </LinearLayout>
    </ScrollView>
    <include layout="@layout/busyoverlay" />
</FrameLayout>