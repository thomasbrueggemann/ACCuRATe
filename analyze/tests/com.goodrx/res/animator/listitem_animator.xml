<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="20.0dip" android:valueType="floatType" android:propertyName="translationZ" />
        </set>
    </item>
    <item android:state_focused="true" android:state_enabled="true" android:state_pressed="false">
        <set>
            <objectAnimator android:duration="100" android:valueTo="0" android:valueType="floatType" android:propertyName="translationZ" />
        </set>
    </item>
</selector>