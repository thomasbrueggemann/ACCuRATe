        <TextView android:textSize="@dimen/summary_text_size" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/confirm_password" style="@style/WizardFormLabel" />
        <EditText android:layout_gravity="center_horizontal" android:id="@id/ed_confirm_password" android:layout_width="fill_parent" android:layout_height="wrap_content" android:ems="10" android:maxLength="100" android:inputType="textPassword" />
        <Button android:textSize="@dimen/summary_text_size" android:layout_gravity="right" android:id="@id/btn_submit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/submit" style="@style/WizardFormLabel" />
    </LinearLayout>
